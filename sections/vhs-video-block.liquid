<div class="video-section section-{{ section.id }}">
  <div class="video-wrapper">
    {%- if section.settings.video_url != blank -%}
      <iframe
        class="video-player"
        src="{{ section.settings.video_url | replace: 'watch?v=', 'embed/' }}?rel=0&controls=1"
        frameborder="0"
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
        allowfullscreen
      ></iframe>
    {%- elsif section.settings.video_file != blank -%}
      <video
        class="video-player"
        controls
        preload="metadata"
        poster="{{ section.settings.cover_image | image_url: width: 1920 }}"
      >
        <source src="{{ section.settings.video_file | file_url }}" type="video/mp4">
        Your browser does not support the video tag.
      </video>
    {%- endif -%}
  </div>
</div>

{% schema %}
{
  "name": "Video Block",
  "settings": [
    {
      "type": "video_url",
      "id": "video_url",
      "label": "YouTube Video URL",
      "accept": ["youtube"]
    },
    {
      "type": "video",
      "id": "video_file",
      "label": "Video file (MP4)",
      "info": "Maximum file size: 20MB"
    },
    {
      "type": "image_picker",
      "id": "cover_image",
      "label": "Cover image",
      "info": "Shown before video plays"
    }
  ],
  "presets": [
    {
      "name": "Video Block"
    }
  ]
}
{% endschema %}

<style>
  .video-section {
    max-width: 100%;
    margin: 0 auto;
  }

  .video-wrapper {
    position: relative;
    padding-bottom: 56.25%; /* 16:9 Aspect Ratio */
    height: 0;
    overflow: hidden;
  }

  .video-player {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border: 0;
  }
</style>
