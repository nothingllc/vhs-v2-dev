<div class="full-width-media section-{{ section.id }}">
  {% for block in section.blocks %}
    <div class="media-block" {{ block.shopify_attributes }}>
      {%- if block.settings.video != blank -%}
        <div class="video-wrapper" style="padding-bottom: 56.25%;">
          <video
            controls
            playsinline
            preload="auto"
            {% if block.settings.autoplay %}autoplay muted loop{% endif %}
            poster="{{ block.settings.cover_image | image_url: width: 1920 }}"
            oncanplay="this.play()"
            onwaiting="this.pause()"
          >
            <source src="{{ block.settings.video | file_url }}" type="video/mp4">
          </video>
          <div class="video-loading-overlay">
            <div class="loading-spinner"></div>
          </div>
        </div>
      {%- elsif block.settings.image != blank -%}
        <div class="image-wrapper">
          <img
            srcset="
              {%- if block.settings.image.width >= 375 -%}{{ block.settings.image | image_url: width: 375 }} 375w,{%- endif -%}
              {%- if block.settings.image.width >= 750 -%}{{ block.settings.image | image_url: width: 750 }} 750w,{%- endif -%}
              {%- if block.settings.image.width >= 1100 -%}{{ block.settings.image | image_url: width: 1100 }} 1100w,{%- endif -%}
              {%- if block.settings.image.width >= 1500 -%}{{ block.settings.image | image_url: width: 1500 }} 1500w,{%- endif -%}
              {%- if block.settings.image.width >= 2200 -%}{{ block.settings.image | image_url: width: 2200 }} 2200w,{%- endif -%}
              {{ block.settings.image | image_url }} {{ block.settings.image.width }}w
            "
            src="{{ block.settings.image | image_url: width: 1500 }}"
            sizes="100vw"
            alt="{{ block.settings.image.alt | escape }}"
            loading="lazy"
            width="{{ block.settings.image.width }}"
            height="{{ block.settings.image.height }}"
          >
        </div>
      {%- endif -%}
    </div>
  {% endfor %}
</div>

{% schema %}
{
  "name": "Full Width Media",
  "blocks": [
    {
      "type": "media",
      "name": "Media Item",
      "settings": [
        {
          "type": "video",
          "id": "video",
          "label": "Video file",
          "info": "Upload an MP4 video file"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image",
          "info": "Will be used if no video is selected"
        },
        {
          "type": "image_picker",
          "id": "cover_image",
          "label": "Video cover image",
          "info": "Shown while video is loading"
        },
        {
          "type": "checkbox",
          "id": "autoplay",
          "label": "Autoplay video",
          "default": false,
          "info": "Video will be muted when autoplay is enabled"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Full Width Media",
      "category": "Media",
      "blocks": [
        {
          "type": "media"
        }
      ]
    }
  ]
}
{% endschema %}

<style>
  .full-width-media {
    width: 100vw;
    margin-left: calc(-50vw + 50%);
    margin-right: calc(-50vw + 50%);
  }

  .video-wrapper {
    position: relative;
    width: 100%;
    height: 0;
    overflow: hidden;
  }

  .video-wrapper video {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .image-wrapper img {
    width: 100%;
    height: auto;
    display: block;
  }

  .video-loading-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 1;
    transition: opacity 0.3s ease;
  }

  .video-wrapper video:playing + .video-loading-overlay {
    opacity: 0;
    pointer-events: none;
  }

  .loading-spinner {
    width: 40px;
    height: 40px;
    border: 4px solid #f3f3f3;
    border-top: 4px solid #3498db;
    border-radius: 50%;
    animation: spin 1s linear infinite;
  }

  @keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
  }
</style>
